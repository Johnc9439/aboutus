extends layout 

block content
	.container
		section#content
			form(action="/signup", method='POST')
				h1 Register
				div
					input#username(type='text', name='username', placeholder='Username', required, autofocus)
				div
					input#password(type='password', name='password', placeholder='Password', required)
				div
					input#username(type='text', name='email', placeholder='Email', required)
				div
					input#username(type='text', name='nickname', placeholder='nickname', required)
				div
					input(type="submit", value="Register")
					span.clearfix
					a(href="/login") Back to log in
  
				#message
				if message
					h1.text-center.error-message #{message}
