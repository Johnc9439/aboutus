doctype html
html(lang="en")
	head
		title Secret Garden
		meta(charset="utf-8")
		link(rel="stylesheet", type="text/css", href="../css/login.css")
	body
		header
			.stuck-head
				a#nav-open.nav-btn
					span
				// fullscreen nav
			#menu
				nav.navigation
					ul
						li
							a(href="/") Home
						li
							a(href="/journal") Journal
						li
							a(href="/aboutus") About Us
						li
							a(href="/login") Login

	.container
		section#content
			form(action="/signup", method='POST')
				h1 Register
				div
					input#username(type='text', name='username', placeholder='Username', required, autofocus)
				div
					input#password(type='password', name='password', placeholder='Password', required)
				div
					input#username(type='text', name='email', placeholder='Email', required)
				div
					input#username(type='text', name='nickname', placeholder='nickname', required)
				div
					input(type="submit", value="Register")
					span.clearfix
					a(href="/login") Back to log in
  
				#message
				if message
					h1.text-center.error-message #{message}
	
	script(type="text/javascript", src="https://code.jquery.com/jquery-2.1.4.min.js")
	script(type="text/javascript", src="../js/navi.js")
