doctype html
html(lang="en")
	head
		title Secret Garden
		meta(charset="utf-8")
		link(rel="stylesheet", type="text/css", href="../css/login.css")
	body
		header
			.stuck-head
				a#nav-open.nav-btn
					span
				// fullscreen nav
			#menu
				nav.navigation
					ul
						li
							a(href="/") Home
						li
							a(href="/journal") Journal
						li
							a(href="/aboutus") About Us
						li
							a(href="/signup") Sign Up
		.container
			section#content
				form(action="/login", method='POST')
					h1 Login
					div
						input#username(type="text", name="username", placeholder="Username", required="")
					div
						input#password(type="password", name="password", placeholder="Password", required="")
					div
						input(type="submit", value="Log in")
						a(href="#") Lost your password?
						a(href="/signup") Register

					#message
					if message
						h1.text-center.error-message #{message}


		script(type="text/javascript", src="https://code.jquery.com/jquery-2.1.4.min.js")
		script(type="text/javascript", src="../js/navi.js")
