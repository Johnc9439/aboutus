extends layout

append head
  link(rel='stylesheet', type='text/css', href='../css/origin.css')

block content
    .container
      #img(style='height:800px;')
      section#content.rectangle
        form(action="/login", method='POST')
          h1 Login
          div
            input#username(type="text", name="username", placeholder="Username", required="")
          div
            input#password(type="password", name="password", placeholder="Password", required="")
          div
            input(type="submit", value="Login")
            //a(href="#") Lost your password?
            a(href="/signup") Register
            #message
              if message
                h1.text-center.error-message #{message}
